{
  "name": "wesock-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "backend",
    "frontend",
    "shared"
  ],
  "scripts": {
    "dev:backend": "cd backend && bun run dev",
    "dev:frontend": "cd frontend && bun run dev",
    "dev": "bun run dev:backend & bun run dev:frontend",
    "lint": "bun run --filter '*' lint",
    "lint:fix": "bun run --filter '*' lint:fix"
  }
}
